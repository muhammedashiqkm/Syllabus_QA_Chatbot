# --- Core Flask Settings ---
# Generate a strong random string for this.
# You can use: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY="your_strong_random_32_byte_secret_key"
JWT_SECRET_KEY="your_other_strong_random_32_byte_secret_key"

# --- Database ---
# This must match the PostgreSQL database URL. 
# Format: postgresql://<user>:<password>@<host>:<port>/<dbname>
DATABASE_URL="postgresql://postgres:your_db_password@db:5432/syllabus_db"

# --- Cache & Broker (Must match docker-compose.yaml) ---
RATELIMIT_STORAGE_URI="memcached://memcached:11211"
CELERY_BROKER_URL="redis://redis:6379/0"
CELERY_RESULT_BACKEND="redis://redis:6379/0"

# --- CORS ---
# Comma-separated list of front-end origins (e.g., http://localhost:4200 for Angular)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# --- AI Model API Keys ---
GOOGLE_API_KEY="your_google_ai_studio_api_key_here"
OPENAI_API_KEY="your_openai_api_key_here"
DEEPSEEK_API_KEY="your_deepseek_api_key_here"

# --- AI Model Names (Optional - these are the defaults) ---
EMBEDDING_MODEL_NAME="models/text-embedding-004"
GEMINI_MODEL_NAME="gemini-2.5-flash"
OPENAI_MODEL_NAME="gpt-4o-mini"
DEEPSEEK_MODEL_NAME="deepseek-chat"
DEEPSEEK_BASE_URL="https://api.deepseek.com/v1"

# --- RAG & Token Settings (Optional - these are the defaults) ---
JWT_ACCESS_TOKEN_EXPIRES=24
TEXT_CHUNK_SIZE=1000
TEXT_CHUNK_OVERLAP=200
CHAT_HISTORY_LIMIT=10